{{!
    @template theme_tatanganga/login

    Tatanganga login page template.

    Context variables required for this template:
    * sitename - The site name
    * output - core renderer
    * bodyattributes - attributes for the body tag
}}
{{{ output.doctype() }}}
<html {{{ output.htmlattributes() }}}>
<head>
    <title>{{{ sitename }}}</title>
    {{{ output.standard_head_html() }}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body.pagelayout-login {
            background: #f3f4f6;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .pagelayout-login #page {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }
        .pagelayout-login .main-inner {
            display: flex;
            align-items: center;
            gap: 3rem;
            width: 100%;
            max-width: 1000px;
        }
        .pagelayout-login .login-branding {
            flex: 1;
            color: #1f2937;
        }
        .pagelayout-login .login-branding .brand-title {
            font-size: 2rem;
            font-weight: 700;
            color: #8B1538;
            margin-bottom: 0.5rem;
        }
        .pagelayout-login .login-branding .brand-subtitle {
            font-size: 1rem;
            color: #6b7280;
            margin-bottom: 1.5rem;
        }
        .pagelayout-login .login-branding .feature {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
            font-size: 0.95rem;
            color: #374151;
        }
        .pagelayout-login .login-branding .feature-icon {
            font-size: 1.25rem;
        }
        .pagelayout-login .login-container {
            flex: 0 0 380px;
        }
        .pagelayout-login .login-container .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.10);
            background: #fff;
        }
        .pagelayout-login .login-container .card-body {
            padding: 2rem;
        }
        .pagelayout-login .login-footer {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.9rem;
        }
        .pagelayout-login .login-footer a {
            color: #8B1538;
            text-decoration: none;
        }
        .pagelayout-login .login-footer a:hover {
            text-decoration: underline;
        }
        .pagelayout-login .btn-primary {
            background: #8B1538 !important;
            border-color: #8B1538 !important;
        }
        .pagelayout-login .btn-primary:hover {
            background: #5C0E2A !important;
            border-color: #5C0E2A !important;
        }
        .pagelayout-login .form-control:focus {
            border-color: #8B1538 !important;
            box-shadow: 0 0 0 0.2rem rgba(139,21,56,0.2) !important;
        }
        @media (max-width: 768px) {
            .pagelayout-login .main-inner {
                flex-direction: column;
                gap: 1.5rem;
            }
            .pagelayout-login .login-branding .features {
                display: none;
            }
            .pagelayout-login .login-container {
                flex: 1 1 100%;
                width: 100%;
            }
        }
    </style>
</head>

<body {{{ bodyattributes }}}>
{{{ output.standard_top_of_body_html() }}}

<div id="page" class="container-fluid">

    <div class="main-inner">
        <!-- Branding Section -->
        <div class="login-branding">
            {{#haslogo}}
                <img src="{{logourl}}" alt="{{sitename}}" class="logo">
            {{/haslogo}}
            {{^haslogo}}
                <h1 class="brand-title">{{{sitename}}}</h1>
            {{/haslogo}}
            
            <h2 class="brand-subtitle">Plataforma de Aprendizaje Digital</h2>
            
            <div class="features">
                <div class="feature">
                    <div class="feature-icon">üìö</div>
                    <div class="feature-text">Acceso a cursos premium de alta calidad</div>
                </div>
                <div class="feature">
                    <div class="feature-icon">üéØ</div>
                    <div class="feature-text">Aprendizaje personalizado y adaptativo</div>
                </div>
                <div class="feature">
                    <div class="feature-icon">üèÜ</div>
                    <div class="feature-text">Certificados reconocidos internacionalmente</div>
                </div>
                <div class="feature">
                    <div class="feature-icon">üåç</div>
                    <div class="feature-text">Comunidad global de aprendices</div>
                </div>
            </div>
        </div>

        <!-- Login Form Section -->
        <div class="login-container">
            <div class="card">
                <div class="card-body">
                    {{{ maincontent }}}
                </div>
            </div>
            
            <div class="login-footer">
                {{#hasforgotpassword}}
                    <a href="{{{forgotpasswordurl}}}">¬øOlvidaste tu contrase√±a?</a>
                {{/hasforgotpassword}}
